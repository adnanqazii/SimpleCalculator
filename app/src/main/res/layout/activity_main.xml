<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:stretchColumns="0,1,2,3">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="4"
            android:background="#D36868"
            android:gravity="right"
            android:text="0"
            android:textSize="50dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="4"
            android:backgroundTint="#FF0909"
            android:onClick="doAC"
            android:text="AC" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E81616"
            android:contentDescription="1"
            android:onClick="goOperand"
            android:text="1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:contentDescription="2"
            android:onClick="goOperand"
            android:backgroundTint="#FF0909"
            android:text="2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="3"
            android:backgroundTint="#FF0909"
            android:onClick="goOperand"
            android:text="3" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button7"
            android:backgroundTint="#FF0909"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="4"
            android:onClick="goOperand"
            android:text="4" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:backgroundTint="#FF0909"
            android:contentDescription="5"
            android:onClick="goOperand"
            android:text="5" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="6"
            android:onClick="goOperand"
            android:backgroundTint="#FF0909"
            android:text="6" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button10"
            android:backgroundTint="#FF0909"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="7"
            android:onClick="goOperand"
            android:text="7" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:backgroundTint="#FF0909"
            android:contentDescription="8"
            android:onClick="goOperand"
            android:text="8" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="9"
            android:backgroundTint="#FF0909"
            android:onClick="goOperand"
            android:text="9" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button12"
            android:backgroundTint="#FF0909"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="4"
            android:contentDescription="0"
            android:onClick="goOperand"
            android:text="0" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0909"
            android:contentDescription="+"
            android:onClick="goOperator"
            android:text="@string/addition" />

        <Button
            android:id="@+id/button13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0909"
            android:contentDescription="-"
            android:onClick="goOperator"
            android:text="@string/subtraction" />

        <Button
            android:id="@+id/button14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0909"
            android:contentDescription="*"
            android:onClick="goOperator"
            android:text="@string/multiplication" />

        <Button
            android:id="@+id/button15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0909"
            android:contentDescription="/"
            android:onClick="goOperator"
            android:text="@string/division" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0909"
            android:contentDescription="%"
            android:onClick="goOperator"
            android:text="@string/modulus" />

        <Button
            android:id="@+id/button17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:backgroundTint="#FF0909"
            android:onClick="computeValue"
            android:text="=" />
    </TableRow>

</TableLayout>